# Configuração do Ambiente
APP_ENV=production
APP_DEBUG=false
APP_URL=https://godeliverypro.com

# Configuração do Banco de Dados
# Para banco externo, configure:
# DB_HOST=seu-servidor-mysql.com
# Para usar o MySQL do Docker (padrão):
DB_HOST=db
DB_PORT=3306
DB_DATABASE=catchme
DB_USERNAME=catchme_user
DB_PASSWORD=catchme_password
DB_ROOT_PASSWORD=root_password

# Porta externa do MySQL (para acesso de fora do Docker)
DB_EXTERNAL_PORT=3306

# Configuração do Nginx (portas)
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Trusted Proxies (importante para capturar IP real)
TRUSTED_PROXIES=*
